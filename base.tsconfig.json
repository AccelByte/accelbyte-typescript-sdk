{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "module": "ESNext",
    "types": ["vite/client", "node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strict": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "target": "ES6",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "newLine": "crlf",
    "baseUrl": ".",
    "paths": {
      "@accelbyte/validator": ["../../packages/validator/src"],
      "@accelbyte/error-translator": ["../../packages/error-translator/src"],
      "crypto": ["node_modules/crypto-browserify"],

      "@accelbyte/sdk/*": ["../../packages/sdk/src/*"],
      "@accelbyte/sdk": ["../../packages/sdk/src"],
      "~/iam-definitions/*": ["../../packages/sdk-iam/src/generated-definitions/*"]
    }
  },
  "references": [{ "path": "../../packages/sdk/" }],
  "exclude": ["node_modules"]
}
