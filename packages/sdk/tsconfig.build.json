{
  "extends": "../../base.tsconfig.json",
  "compilerOptions": {
    "target": "es2021",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "allowJs": true,
    "declarationDir": "types",
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "@accelbyte/sdk": ["../sdk/src"],
      "@accelbyte/sdk/*": ["..//sdk/src/*"],
      "~/iam-definitions/*": ["../sdk-iam/src/generated-definitions/*"]
    }
  },
  "include": ["src"],
  "exclude": ["scripts", "test", "node_modules", "dist", "vitest.config.ts"]
}
