{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strict": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "target": "es2021",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "newLine": "crlf",
    "baseUrl": ".",
    "paths": {
      "@accelbyte/sdk": [
        "./src"
      ],
      "@accelbyte/sdk/*": [
        "./src/*"
      ],
      "@accelbyte/validator": [
        "../validator/src",
        "../validator/src/index.ts"
      ],
      "@accelbyte/validator/*": [
        "../validator/src/*"
      ]
    },
    "declarationDir": ".",
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "scripts",
    "node_modules",
    "dist"
  ]
}