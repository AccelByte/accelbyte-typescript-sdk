{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strict": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "target": "es2021",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "newLine": "crlf",
    "baseUrl": ".",
    "paths": {
      "@od-web-sdk/*": [
        "./src/*"
      ]
    },
    "declarationDir": ".",
    "declarationMap": true,
    "outDir": "dist"
  },
  "exclude": [
    "scripts",
    "test",
    "node_modules",
    "dist"
  ]
}